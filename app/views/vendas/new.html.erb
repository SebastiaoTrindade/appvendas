<h1>Nova Venda</h1>

<%= form_with model: @venda, local: true do |form| %>
  <div class="form-group">
    <%= form.label :cliente_id, "Cliente" %>
    <%= form.collection_select :cliente_id, Cliente.all, :id, :nome, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :valor_total, "Valor Total" %>
    <%= form.text_field :valor_total, class: 'form-control', disabled: true %>
  </div>

  <%= form.submit "Finalizar Venda", class: "btn btn-success" %>
<% end %>

