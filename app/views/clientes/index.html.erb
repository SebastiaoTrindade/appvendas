<h1 class="mb-4">Lista de Clientes</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>CPF</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.nome %></td>
        <td><%= cliente.cpf %></td>
        <td>
          <%= link_to 'Editar', edit_cliente_path(cliente), class: 'btn btn-sm btn-warning' %>
          <%= link_to 'Excluir', cliente_path(cliente), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-sm btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Novo Cliente', new_cliente_path, class: 'btn btn-primary' %>

