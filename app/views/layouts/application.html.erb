<!DOCTYPE html>
<html>
  <head>
    <title>PDV Vendas</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#">PDV Vendas</a>
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to 'Produtos', produtos_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Vendas', vendas_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Caixa', caixas_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Clientes', clientes_path, class: 'nav-link' %>
        </li>
      </ul>
    </nav>

    <div class="container mt-4">
      <%= yield %>
    </div>
  </body>
</html>
