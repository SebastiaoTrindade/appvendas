<h1 class="mb-4">Lista de Produtos</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Código</th>
      <th>Preço de Venda</th>
      <th>Quantidade em Estoque</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.nome %></td>
        <td><%= produto.codigo %></td>
        <td><%= number_to_currency(produto.preco_venda) %></td>
        <td><%= produto.quantidade_estoque %></td>
        <td>
          <%= link_to 'Editar', edit_produto_path(produto), class: 'btn btn-sm btn-warning' %>
          <%= link_to 'Excluir', produto_path(produto), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-sm btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Novo Produto', new_produto_path, class: 'btn btn-primary' %>
